<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd"> 
<web-app>
	<servlet> 
		<servlet-name>testPooling</servlet-name> 
		<servlet-class>servlets.TestPooling</servlet-class> 
	</servlet>
	<servlet> 
		<servlet-name>search</servlet-name> 
		<servlet-class>servlets.Search</servlet-class> 
	</servlet>
	<servlet> 
		<servlet-name>createUser</servlet-name> 
		<servlet-class>servlets.CreateUser</servlet-class> 
	</servlet>
	<servlet> 
		<servlet-name>login</servlet-name> 
		<servlet-class>servlets.Login</servlet-class> 
	</servlet> 
	<servlet> 
		<servlet-name>logout</servlet-name> 
		<servlet-class>servlets.Logout</servlet-class> 
	</servlet>  
	<servlet> 
		<servlet-name>addMessage</servlet-name> 
		<servlet-class>servlets.AddMessage</servlet-class> 
	</servlet>
	<servlet> 
		<servlet-name>addComment</servlet-name> 
		<servlet-class>servlets.AddComment</servlet-class> 
	</servlet>
	<servlet> 
		<servlet-name>addFriend</servlet-name> 
		<servlet-class>servlets.AddFriend</servlet-class> 
	</servlet>
	<servlet> 
		<servlet-name>removeFriend</servlet-name> 
		<servlet-class>servlets.RemoveFriend</servlet-class> 
	</servlet>
	<servlet> 
		<servlet-name>removeMessage</servlet-name> 
		<servlet-class>servlets.RemoveMessage</servlet-class> 
	</servlet>
	<servlet> 
		<servlet-name>removeComment</servlet-name> 
		<servlet-class>servlets.RemoveComment</servlet-class> 
	</servlet>
	<servlet> 
		<servlet-name>addLike</servlet-name> 
		<servlet-class>servlets.AddLike</servlet-class> 
	</servlet>
	<servlet> 
		<servlet-name>listMessages</servlet-name> 
		<servlet-class>servlets.ListMessages</servlet-class> 
	</servlet>

	<servlet-mapping> 
		<servlet-name>createUser</servlet-name> 
		<url-pattern>/user/createUser</url-pattern> 
	</servlet-mapping> 
	<servlet-mapping> 
		<servlet-name>login</servlet-name> 
		<url-pattern>/user/login</url-pattern> 
	</servlet-mapping> 
	<servlet-mapping> 
		<servlet-name>logout</servlet-name> 
		<url-pattern>/user/logout</url-pattern> 
	</servlet-mapping> 
	<servlet-mapping> 
		<servlet-name>addMessage</servlet-name> 
		<url-pattern>/user/addMessage</url-pattern> 
	</servlet-mapping> 
	<servlet-mapping> 
		<servlet-name>addFriend</servlet-name> 
		<url-pattern>/friends/addFriend</url-pattern> 
	</servlet-mapping> 
	<servlet-mapping> 
		<servlet-name>removeFriend</servlet-name> 
		<url-pattern>/friends/removeFriend</url-pattern> 
	</servlet-mapping>
	<servlet-mapping> 
		<servlet-name>removeMessage</servlet-name> 
		<url-pattern>/user/removeMessage</url-pattern> 
	</servlet-mapping>
	<servlet-mapping> 
		<servlet-name>testPooling</servlet-name> 
		<url-pattern>/testPooling</url-pattern> 
	</servlet-mapping>
	<servlet-mapping> 
		<servlet-name>search</servlet-name> 
		<url-pattern>/user/search</url-pattern> 
	</servlet-mapping>
	<servlet-mapping> 
		<servlet-name>addComment</servlet-name> 
		<url-pattern>/user/addComment</url-pattern> 
	</servlet-mapping>
	<servlet-mapping> 
		<servlet-name>removeComment</servlet-name> 
		<url-pattern>/user/removeComment</url-pattern> 
	</servlet-mapping>
	<servlet-mapping> 
		<servlet-name>addLike</servlet-name> 
		<url-pattern>/user/addLike</url-pattern> 
	</servlet-mapping>
	<servlet-mapping> 
		<servlet-name>listMessages</servlet-name> 
		<url-pattern>/user/listMessages</url-pattern> 
	</servlet-mapping>

	<resource-ref>
		<description>DB Connection</description>
  		<res-ref-name>jdbc/db</res-ref-name>
  		<res-type>javax.sql.DataSource</res-type>
  		<res-auth>Container</res-auth>
	</resource-ref>
</web-app>